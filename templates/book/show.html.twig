{% extends 'base.html.twig' %}

{% block main %}
	<h1>Book</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ book.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ book.title }}</td>
			</tr>
			<tr>
				<th>Author</th>
				<td>{{ book.author }}</td>
			</tr>
			<tr>
				<th>Publisher</th>
				<td>{{ book.publisher }}</td>
			</tr>
			<tr>
				<th>Year</th>
				<td>{{ book.year ? book.year|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ book.description }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('book_index') }}">back to list</a>

	<a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

	{{ include('book/_delete_form.html.twig') }}
{% endblock %}
