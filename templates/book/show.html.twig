{% extends 'base.html.twig' %}

{% block main %}
	<div class="show-container">
		<h3>{{ book.title }}</h3>
		<ul class="book">
			<li class="title">
				<strong>Title:</strong>
				{{ book.title }}</li>
			<li class="author">
				<strong>Author:</strong>
				{{ book.author }}</li>
			<li class="publisher">
				<strong>Publisher:</strong>
				{{ book.publisher }}</li>
			<li class="year">
				<strong>Year:</strong>
				{{ book.year }}</li>
			<li class="description">
				<strong>Description:</strong>
				{{ book.description }}</li>
		</ul>
		<div class="actions">
			<a class='list-btn btn' href="{{ path('app_book_index') }}">Back to list</a>
			{% if is_granted('ROLE_ADMIN') %}
				{{ include('book/_delete_form.html.twig') }}
				<a class='edit-btn btn' href="{{ path('app_book_edit', {'id': book.id}) }}">Edit</a>
			{% endif %}
		</div>


	{% endblock %}
