<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>Symfony-Books</title>
		{% block stylesheets %}
			<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="menu">
				<div>
					<a class='home-btn' href="{{ path('app_home') }}">Home</a>
					<a class="list-btn" href="{{ path('app_book_index') }}">Book List</a>
				</div>
				{% if app.user %}
					<a class='login-btn' href="{{ path('app_logout') }}">Logout</a>
				{% else %}
					<a class='login-btn' href="{{ path('app_login') }}">Login</a>
				{% endif %}
			</nav>
		</header>
		<main>
			{% block main %}{% endblock %}
		</main>
		<footer>
			<p class='copyright'>Â© Francesco Biava</p>
		</footer>
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
